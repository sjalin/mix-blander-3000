<MyGrid>:
    p_bar: p_bar
    std_out: std_out
    mixer_buttons: mixer_buttons
    insert_liquids_here: insert_liquids_here

    canvas.before:
        Color:
            rgb: kivy.utils.get_color_from_hex('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        id: grid
        size: root.width, root.height
        cols: 1

        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: None
            height: 100
            Label:
                text: 'Mix-blender 3000'
                color: kivy.utils.get_color_from_hex('#00834d')
                size_hint_y: None
                font_size: 77
                font_family: 'Helvetica'
                height: 100
                canvas.before:
                    Color:
                        rgb: 0.1,0.1,0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Button:
                size_hint_y: None
                height: 100
                size_hint_x: None
                width: 100
                text: 'DIE!'
                color: (1, 1, 1)
                background_color: (1, 0, 0)
                on_press: app.stop()


        GridLayout:
            cols: 2
            rows: 1

            GridLayout:
                id: mixer_buttons
                cols: 1
                Button:
                    text: 'Random'
                    font_size: 33
                    color: kivy.utils.get_color_from_hex('#00834d')
                    background_color: kivy.utils.get_color_from_hex('#007700')
                    on_press: root.drink_btn_click(self.text)

            GridLayout:
                cols: 1
                TextInput:
                    readonly: True
                    size_hint: 1, 1
                    text_size: self.width, None
                    font_size: 20
                    id: std_out
                    color: kivy.utils.get_color_from_hex('#000000')
                    halign: 'left'
                    valign: 'top'
                    text: 'Lets start mixing'
                GridLayout:
                    id: insert_liquids_here
                    cols: 2

        ProgressBar:
            id: p_bar
            size_hint_y: None
            height: 20
            value: 0
            max: 100